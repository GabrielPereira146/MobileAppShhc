<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileDashboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue_Celadon</item>
        <item name="colorPrimaryVariant">@color/Blue_Prussian</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Blue_Sapphire</item>
        <item name="colorSecondaryVariant">@color/Blue_Carolina</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/BackgorundDark</item>
        <item name="colorOnBackground">@color/GrayDark</item>
    </style>
</resources>